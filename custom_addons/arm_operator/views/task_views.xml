<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="view_operator_task_list" model="ir.ui.view">
        <field name="name">operator.task.view.list</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <list string="Operator Tasks">
                <field name="name"/>
                <field name="status"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_operator_task_form" model="ir.ui.view">
        <field name="name">operator.task.view.form</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <form string="Operator Task">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban view -->
    <record id="view_operator_task_kanban" model="ir.ui.view">
        <field name="name">operator.task.view.kanban</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="o_kanban_record o_kanban_card my_task_card" >
                            <!-- Заголовок -->
                            <div class="task-header">
                                <strong>
                                    <field name="id"/>
                                </strong>
                                <span class="task-title">
                                    <field name="name"/>
                                </span>

                            </div>

                            <!-- Тело карточки -->
                            <div class="task-body">
                                <field name="status"/>
                            </div>

                            <!-- Кнопки действий -->
                            <div class="task-actions">
                                <t t-if="record.status.raw_value == 'ready'">
                                    <button type="object" name="action_start_work" string="Взять в работу"
                                            class="btn btn-primary"/>
                                </t>
                                <t t-if="record.status.raw_value == 'in_progress'">
                                    <button type="object" name="action_done" string="Завершить"
                                            class="btn btn-success"/>
                                    <button type="object" name="action_reject" string="Брак" class="btn btn-danger"/>
                                </t>
                            </div>

                            <!-- Нижние ссылки -->
                            <div class="task-footer">
                                <button type="object" name="action_open_details" class="btn btn-link">Подробнее</button>
                                <button type="object" name="action_open_files" class="btn btn-link">Файлы</button>
                            </div>
                        </div>

                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_operator_task" model="ir.actions.act_window">
        <field name="name">Задания</field>
        <field name="res_model">operator.task</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_operator_root"
              name="АРМ"
              sequence="10"/>

    <menuitem id="menu_operator_task"
              parent="menu_operator_root"
              name="Задания"
              action="action_operator_task"/>
</odoo>
