<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="view_operator_task_list" model="ir.ui.view">
        <field name="name">operator.task.view.list</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <list string="Operator Tasks">
                <field name="name"/>
                <field name="status"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_operator_task_form" model="ir.ui.view">
        <field name="name">operator.task.view.form</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <form string="Operator Task">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban view -->
    <record id="view_operator_task_kanban" model="ir.ui.view">
        <field name="name">operator.task.view.kanban</field>
        <field name="model">operator.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record o_kanban_card my_task_card"
                             t-attf-class="status-{{ record.status.raw_value }}">
                            <div class="d-flex justify-content-between align-items-center w-100 p-2">
                                <div>
                                    <strong>
                                        <field name="id"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="name"/>
                                </div>
                                <div>
                                    <field name="status"/>
                                </div>

                                <!-- Динамические кнопки -->
                                <div>
                                    <t t-if="record.status.raw_value == 'ready'">
                                        <button type="object"
                                                name="action_start_work"
                                                string="Взять в работу"
                                                class="btn btn-primary btn-sm"/>
                                    </t>
                                    <t t-if="record.status.raw_value == 'in_progress'">
                                        <button type="object"
                                                name="action_done"
                                                string="Завершить"
                                                class="btn btn-success btn-sm"/>
                                        <button type="object"
                                                name="action_reject"
                                                string="Брак"
                                                class="btn btn-danger btn-sm"/>
                                    </t>
                                </div>
                            </div>

                            <div class="d-flex justify-content-around p-2">
                                <button type="object" name="action_open_details"
                                        class="btn btn-link">Подробнее
                                </button>
                                <button type="object" name="action_open_files"
                                        class="btn btn-link">Файлы
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_operator_task" model="ir.actions.act_window">
        <field name="name">Задания</field>
        <field name="res_model">operator.task</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_operator_root"
              name="АРМ"
              sequence="10"/>

    <menuitem id="menu_operator_task"
              parent="menu_operator_root"
              name="Задания"
              action="action_operator_task"/>
</odoo>
